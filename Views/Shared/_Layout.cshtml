<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500">
    <link rel="stylesheet" href="~/css/style.css">

    <script src="https://kit.fontawesome.com/e8be9fcdae.js" crossorigin="anonymous"></script>

    <title>@ViewBag.Title</title>

    @if (Model is Piranha.Models.IMeta)
    {
        <partial name="Partial/_Meta.cshtml" />
    }

    @RenderSection("head", required: false)
</head>
<body>
    <header class="site-header @(ViewBag.HasImage == null || !ViewBag.HasImage ? "site-header-dark" : "")">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-sm-12">
                    <partial name="Partial/_Menu.cshtml" />
                </div>
                <form class="form-inline my-2 my-lg-0 col-md-2 col-sm-12 justify-content-center">
                    <button class="btn btn-heroes btn-lg my-2 my-sm-0" type="button" data-toggle="modal" data-target="#exampleModal">Участвай</button>
                </form>
            </div>
        </div>
    </header>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Направете геройски клуб и спечелете купата!</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Изпрати e-mail на timeheroes@timeheroes.org</p>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-heroes" href="https://super.timeheroes.org/">Продължи в Timeheroes</a>
                    <button type="button" class="btn btn-heroes" data-dismiss="modal" aria-label="Close">OK</button>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <footer class="border-top text-muted custom-footer pt-3 pl-5 pr-5">
        <div class="pt-3 pl-5 pr-5">
            <div class="pt-3 pl-md-5 pr-md-5">
                <div class="pt-3 pl-md-5 pr-md-5">
                    @{
                        var currentSite = await WebApp.Site.GetContentAsync<HeroesCupSite>();
                    }
                    @if (currentSite != null)
                    {
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                @Html.Raw(currentSite.FooterContents.UpperContentLeft)
                            </div>
                            <div class="col-md-6 col-sm-12">
                                @Html.Raw(currentSite.FooterContents.UpperContentRight)
                            </div>
                        </div>
                        <div class="row footer-line"></div>
                        <div class="row mt-1">
                            @Html.Raw(currentSite.FooterContents.MiddleContent)
                        </div>
                        <div class="row footer-line"></div>
                        <div class="row mt-1">
                            <div class="col-md-8 col-sm-12 row mt-2">
                                <p>Проект на <a href="https://super.timeheroes.org">Timeheroes.org</a> | Уеб разработка от</p>
                            </div>
                            <div class="row col-md-4 col-sm-12 row mt-2">
                                <div class="col-md-2 col-sm-2 offset-4">
                                    <a href="https://www.facebook.com/TimeHeroes/">
                                        <span class="icon icon-facebook"></span>
                                    </a>
                                </div>
                                <div class="col-md-2 col-sm-2">
                                    <a class="footer_social_icon" href="https://twitter.com/timeheroesorg?lang=en">
                                        <span class="icon icon-twitter"></span>
                                    </a>
                                </div>
                                <div class="col-md-2 col-sm-2">
                                    <a href="https://www.youtube.com/channel/UC7l1t9MKG2uwcU1TXP7rhZQ">
                                        <span class="icon icon-youtube"></span>
                                    </a>
                                </div>
                                <div class="col-md-2 col-sm-2">
                                    <a href="https://www.instagram.com/time.heroes/?hl=en">
                                        <span class="icon icon-instagram"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @RenderSection("script", required: false)
</body>
</html>