@model ClubsModule.Models.MissionEditModel
@inject IAuthorizationService Auth
@inject ManagerLocalizer Localizer
@{
    ViewBag.Title = "Edit mission";
    ViewBag.MenuItem = "Missions";

    var clubs = Model.Clubs != null && Model.Clubs.Count() > 0 ? Model.Clubs : new List<HeroesCup.Data.Models.Club>();
    var clubsSelectList = new SelectList(clubs, "Id", "Name");

    var heroes = Model.Heroes != null && Model.Heroes.Count() > 0 ? Model.Heroes : new List<HeroesCup.Data.Models.Hero>();
    var heroesMultipleSelectList = new MultiSelectList(heroes, "Id", "Name");
    var heroesSelectList = new SelectList(heroes, "Id", "Name");
}

@using (var form = Html.BeginForm("Save", "Missions", FormMethod.Post, new { @class = "form validate", role = "form", novalidate = "", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Mission.Id)
    @Html.HiddenFor(m => m.Mission.OwnerId)

    <div class="top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Localizer.General["Missions"]</li>
                <li class="breadcrumb-item" aria-current="page"><a href="@Url.Action("List")">@Localizer.General["Missions"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Localizer.General["Edit"]</li>
            </ol>
        </nav>

        <div class="container-fluid">
            <div class="top-nav">
                @if ((await Auth.AuthorizeAsync(User, ClubsModule.Permissions.MissionsSave)).Succeeded)
                {
                    <button type="submit" class="btn btn-labeled btn-success pull-right">
                        <span class="btn-label">
                            <i class="fas fa-check"></i>
                        </span>
                        @Localizer.General["Save"]
                    </button>
                }
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <span class="title">@Localizer.General["General"]</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["Title"]</label>
                            @Html.TextBoxFor(m => m.Mission.Title, new { @class = "form-control small", maxlength = 128, required = "" })
                            <div class="invalid-feedback">
                                @Localizer.General["Title is mandatory."]
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["Location"]</label>
                            @Html.TextBoxFor(m => m.Mission.Location, new { @class = "form-control small", maxlength = 128, required = "" })
                            <div class="invalid-feedback">
                                @Localizer.General["Location is mandatory."]
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["Start Date"]</label>
                            <input asp-for="UploadedStartDate" type="text" id='start_date' />
                            <div class="invalid-feedback">
                                @Localizer.General["Start date is mandatory."]
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["End Date"]</label>
                            <input asp-for="UploadedEndDate" type="text" id='end_date' />
                            <div class="invalid-feedback">
                                @Localizer.General["End date is mandatory."]
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["Organizer"]</label>
                            @Html.DropDownListFor(m => m.Mission.ClubId, clubsSelectList, new { @class = "form-control small" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["Heroes"]</label>
                            @Html.DropDownListFor(m => m.HeroesIds, heroesMultipleSelectList, new { @class = "form-control small", multiple = "multiple" })
                        </div>
                        <div class="text-right">
                            @if ((await Auth.AuthorizeAsync(User, ClubsModule.Permissions.HeroesAdd)).Succeeded)
                            {
                                <a href="@Url.Action("Add", "Heroes")" class="btn btn-labeled btn-primary pull-right">
                                    <i class="fas fa-plus"></i>@Localizer.General["Add Hero"]
                                </a>
                            }
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-6">
                        @if ((await Auth.AuthorizeAsync(User, ClubsModule.Permissions.MissionsStars)).Succeeded)
                        {
                            <div class="form-group">
                                <label>@Localizer.General["Stars"]</label>
                                @Html.TextBoxFor(m => m.Mission.Stars, new { @class = "form-control small", @type = "number" })
                            </div>
                        }
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>@Localizer.General["Image"]</label>
                            <div class="row col-12">
                                <div class="col-6">
                                    <img src="@Model.ImageSrc" alt="Mission Image">
                                </div>
                                <div class="col-6">
                                    <input type="file" asp-for="Image" class="form-control-file" />
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">

                        <div class="form-group">
                            <label>@Localizer.General["Content"]</label>
                            @*@Html.Partial("~/Areas/Manager/Shared/Partial/_EditorConfig.cshtml", new { @class= "editor" })*@
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}