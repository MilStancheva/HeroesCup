@model HeroesCup.Web.Models.Resources.ResourcePost
@{
    var archive = await WebApp.Api.Pages.GetByIdAsync(Model.BlogId);
    System.Globalization.CultureInfo culture = Model.SiteCulture;
    var currentUrlBase = Model.CurrentUrlBase;
}

@section script{
    <script src="~/scripts/share-buttons.js" type="text/javascript"></script>
}

@section head {
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@currentUrlBase" />
    <meta name="twitter:creator" content="@currentUrlBase" />

    <meta property="og:url" content="@currentUrlBase/resources/@Model.Slug" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:description" content="@Model.Subtitle.Value" />
    <meta property="fb:app_id" content="@Configuration["FacebookAppId"]">
    @if (Model.Type.Value == HeroesCup.Web.Models.Resources.ResourcePostType.VIDEO)
    {
        if (Model.VideoUrl != null && Model.VideoThumbnail != null)
        {
            <meta property="og:video" content="@Model.VideoUrl" is_preferred="true">
            <meta property="og:video:type" content="application/x-shockwave-flash" />
            <meta property="og:image" content="@Model.VideoThumbnail" />
            <meta property="og:image:width" content="672" />
            <meta property="og:image:height" content="416" />
        }
        else
        {
            if (Model.Hero.PrimaryImage.HasValue)
            {
                <meta property="og:image" content="@currentUrlBase@Url.Content(Model.Hero.PrimaryImage.Resize(WebApp.Api, 672, 416))" />
                <meta property="og:image:width" content="672" />
                <meta property="og:image:height" content="416" />
            }
        }
    }
    else
    {
        <meta property="og:image" content="@currentUrlBase@Url.Content(Model.Hero.PrimaryImage.Resize(WebApp.Api, 672, 416))" />
        <meta property="og:image:width" content="672" />
        <meta property="og:image:height" content="416" />
    }
}

<div class="main mt-md-5 pt-md-4 mt-5 pt-4 mb-0">
    <div class="container mt-md-5 pt-md-5 pl-4 pr-4">
        <div class="row pt-4 pb-4">
            <div class="col-12 pl-0 pb-md-4 pb-3">
                <div class="col-12">
                    <h2 class="heading2 d-none d-md-block d-sm-none d-xs-none">@Model.Title</h2>
                    <h3 class="heading3 d-sm-block d-md-none">@Model.Title</h3>
                </div>
                <div class="col-12">
                    <p class="body2">@Model.Subtitle.Value</p>
                </div>

            </div>
            <div class="col-md-8 col-sm-12 pt-md-4 pt-3 pb-4 mb-md-4">
                @if (Model.Hero.PrimaryImage.HasValue)
                {
                    <div class="col-12 pl-0 pr-0 pb-md-4 pb-4 mb-md-4">
                        <div class="col-sm-12 pl-0 pr-0">
                            <img class="img-fluid" src="@Url.Content(Model.Hero.PrimaryImage.Resize(WebApp.Api, 672, 416))">
                        </div>
                    </div>
                }
                <div class="row justify-content-start">
                    <div class="col-12 body2">
                        @Html.DisplayFor(m => m.Blocks)
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 pt-4 pb-4">
                <div class="separator d-sm-block d-md-none mb-5"></div>
                <div class="row share-buttons ml-2 justify-content-start">
                    <div class="col-12 text-left">
                        <span class="text-regular">Полезен ресурс? Сподели го:</span>
                    </div>

                    <div class="col-5 body2">
                        <div class="btn btn-share fb-share-button" id="fb-share-button">
                            <span class="m-1">Share</span>
                            <i class="fa fa-facebook-f"></i>
                        </div>
                    </div>

                    <div class="col-5 body2">
                        <a class="btn btn-share" id="twitter-share-button"
                           href="https://twitter.com/intent/tweet?url=@currentUrlBase/resources/@Model.Slug&text=@Model.Title">
                            <span class="m-1">Tweet</span>
                            <i class="fa fa-twitter"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-12 separator"></div>

        @* Other Resource Posts *@
        <div class="row pt-5">
            @if (Model.OtherResources.Count() > 0)
            {
                <div class="col-12">
                    <h2 class="heading2">Още ресурси</h2>
                </div>
                <div class="col-12">
                    <partial name="~/Views/Resources/_ResourcesList.cshtml" for="@Model.OtherResources" />
                </div>
            }

        </div>
    </div>
</div>
