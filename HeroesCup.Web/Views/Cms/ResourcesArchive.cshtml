@model BlogArchive

@{
    ViewBag.Title = Model.Title;
    ViewBag.HasImage = Model.Hero.PrimaryImage.HasValue;

    //string PrimaryImage() {
    //    if (Model.Hero.PrimaryImage.HasValue) {
    //        return $"style=background-image:url({Url.Content(Model.Hero.PrimaryImage)})";
    //    } 
    //    return "";
}

<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-12 vertical-center">
                <h2>От къде да започна?</h2>
                <p>Тук може да намериш всички необходими ресурси.</p>
            </div>
            <div class="col-md-6 col-sm-12">
                <img src="~/images/Resourses.svg" />
            </div>
        </div>
        <hr />

        @* Posts *@
        @if (Model.Archive.Posts.Count > 0)
        {
            <div class="row">
                @foreach (var post in Model.Archive.Posts)
                {
                    <div class="col-sm-6 col-md-4">
                        <div class="item-body">
                            <a href="@post.Permalink" target="_blank">
                                <div class="row justify-content-center">
                                    <img class="img-fluid" src="@Url.Content(post.Regions.Hero.PrimaryImage)" />
                                </div>
                                <div class="row justify-content-center">
                                    <h4 class="item-title">@post.Title</h4>
                                    <p>@post.Regions.Hero.IngressTitle.Value</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }

        @foreach (var post in Model.Archive.Posts)
        {
            <div class="row archive-item">
                <div class="col-sm-12">
                    <h2><a href="@post.Permalink">@post.Title</a></h2>
                    <p>
                        <strong>@post.Published.Value.ToString("yyyy-MM-dd")</strong> in
                        <a href="@Model.Permalink/category/@post.Category.Slug">@post.Category.Title</a>
                    </p>
                </div>
                <div class="col-sm-9">
                    <p>
                        @post.Regions.Hero.Ingress.Value
                    </p>
                    <p><a href="@post.Permalink">Read more...</a></p>
                </div>
                <div class="col-sm-3 d-xs-none d-md-block">
                    @foreach (var tag in post.Tags)
                    {
                        <span class="tag"># @tag.Title</span>
                    }
                </div>
            </div>
        }

        <hr />
        <partial name="~/Views/Shared/Partial/_Challenge.cshtml" for="@Model.Title" />
    </div>
</div>
