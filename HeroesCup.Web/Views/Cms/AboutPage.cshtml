@model HeroesCup.Web.Models.AboutPage

@{
    ViewBag.Title = Model.Title;
    ViewBag.TypeId = Model.TypeId;
}

<div class="main mt-md-5 pt-md-5">
    <div class="container mt-md-5 pt-md-5 pb-4 pl-4 pr-4 text-md-left text-center">
        <div class="row justify-content-md-start justify-content-center pb-5 pt-5 vertical-center">
            <div class="col-md-6 col-sm-12">
                @Html.Raw(Model.Introduction)
            </div>
        </div>
        <div class="separator"></div>
        <div class="row justify-content-start pb-5 pt-5 vertical-center">
            <div class="col-md-6 col-sm-12 pb-5 pb-md-0">
                <img class="img-fluid about-image" src="~/images/about/about-1.svg" width="496" />
            </div>
            <div class="col-md-6 col-sm-12">
                @Html.Raw(Model.FirstContent)
            </div>
        </div>
        <div class="separator"></div>
        <div class="row justify-content-start pb-md-5 pb-0 pt-5 vertical-center">
            <div class="col-md-6 col-sm-12 pb-5 pb-md-0 order-2 order-md-1">
                @Html.Raw(Model.SecondContent)
            </div>
            <div class="col-md-6 col-sm-12 pb-5 pb-md-0 order-1 order-md-2">
                <img  class="img-fluid about-image" src="~/images/about/about-2.svg" width="496" />
            </div>
        </div>
        <div class="separator"></div>
        @*@if (Model.Blocks.Count > 0)
        {
            <div class="row">
                <div class="col-sm-12">
                    @Html.DisplayFor(m => m.Blocks)
                </div>
            </div>
            <div class="separator"></div>
        }*@

        <partial name="~/Views/Shared/Partial/_Challenge.cshtml" for="@Model.Title" />
    </div>
</div>
