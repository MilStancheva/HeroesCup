@model HeroesCup.Web.Models.Missions.MissionIdeaPost
@{
    ViewBag.Title = Model.Title;

    var archive = await WebApp.Api.Pages.GetByIdAsync(Model.BlogId);
    var site = await WebApp.Api.Sites.GetDefaultAsync();
    var siteCulture = site.Culture != null ? site.Culture : "bg-BG";
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo(siteCulture);
    var currentUrlBase = $"{HttpAccess.HttpContext.Request.Scheme}://{HttpAccess.HttpContext.Request.Host}";


    var startDateAsLocalString = Model.MissionIdea.StartDate.ToString("d MMMM yyyy", culture);
    var endDateAsLocalString = Model.MissionIdea.EndDate.ToString("d MMMM yyyy", culture);

    var today = DateTime.Now.Date;
    var expiredMission = false;
    if (today > Model.MissionIdea.EndDate.Date)
    {
        expiredMission = true;
    }

    var missionIsSeveralDays = true;
    if (Model.MissionIdea.EndDate.Date == Model.MissionIdea.StartDate.Date)
    {
        missionIsSeveralDays = false;
    }

    var organization = Model.MissionIdea.MissionIdea.Organization != null && Model.MissionIdea.MissionIdea.Organization != String.Empty ? Model.MissionIdea.MissionIdea.Organization : "TimeHeroes";
}

@section script{
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/bg_BG/sdk.js#xfbml=1&autoLogAppEvents=1&version=v7.0&appId=@Configuration["FacebookAppId"]"></script>
    <script src="~/scripts/share-buttons.js" type="text/javascript"></script>
    <script src="~/scripts/image-gallery.js" type="text/javascript"></script>
}

@section head {
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@currentUrlBase" />
    <meta name="twitter:creator" content="@currentUrlBase" />

    <meta property="og:url" content="@currentUrlBase/mission-idea/@Model.MissionIdea.Id" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:description" content="@Model.Title" />
    <meta property="fb:app_id" content="@Configuration["FacebookAppId"]">
    <meta property="og:image" content="~/images/Logo.svg" />
}

<div class="main mt-md-5 pt-md-4 mt-5 pt-4">
    <div class="container mt-md-5 pt-md-5 pl-4 pr-4">
        <div class="row mb-md-5 mb-4">
            <div class="row col-12 justify-content-center pr-md-2 pr-0">
                <div class="col-12 pt-md-4 pt-3 pb-md-4 pb-3">
                    <h2 class="heading2 d-none d-md-block d-sm-none d-xs-none">@Model.Title</h2>
                    <h3 class="heading3 d-sm-block d-md-none">@Model.Title</h3>
                    <div class="body2"><span>"@organization", @Model.MissionIdea.MissionIdea.Location </span></div>
                    @if (missionIsSeveralDays)
                    {
                        <div class="body2"><span>Мисията е от @startDateAsLocalString до @endDateAsLocalString</span></div>
                    }
                    else
                    {
                        <div class="body2"><span>Мисията е на @startDateAsLocalString</span></div>
                    }
                </div>

                <div class="col-md-8 col-sm-12 mt-md-5 mt-4 pl-0 pr-0">
                    <div class="col-12 pr-0">
                        <div class="col-sm-12 pl-0 pr-0">
                            @if (expiredMission)
                            {
                                <img class="img-fluid expired-img center-cropped mission-image" src="@Url.Content(Model.MissionIdea.ImageSrc)">
                                <div class="top-left body3-bold">ПРИКЛЮЧИЛА</div>
                            }
                            else
                            {
                                <img class="img-fluid center-cropped mission-image" src="@Url.Content(Model.MissionIdea.ImageSrc)">
                            }
                        </div>
                    </div>
                    <div class="col-12 justify-content-start pl-0 pr-0 pr-md-5">

                        <div class="col-12 mt-md-3 pt-3 pl-0 pr-0 pr-md-2">
                            @if (Model.MissionIdea.MissionIdea.Content != null)
                            {
                                <div class="col-12 mt-2 pt-2 body2">
                                    @*<p class="body2-bold">Какво?</p>*@
                                    @Html.Raw(Model.MissionIdea.MissionIdea.Content)
                                </div>
                            }

                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12 justify-content-start mt-md-5 mt-4 pb-4">
                    <div class="separator d-sm-block d-md-none mb-5"></div>
                    <div class="row share-buttons">
                        <div class="col-12">
                            <span class="text-regular">Сподели тази мисия:</span>
                        </div>

                        <div class="col-5 body2">
                            <div class="btn btn-share fb-share-button" id="fb-share-button">
                                <span class="m-1">Share</span>
                                <i class="fa fa-facebook-f"></i>
                            </div>
                        </div>

                        <div class="col-5 body2">
                            <a class="btn btn-share" id="twitter-share-button"
                               href="https://twitter.com/intent/tweet?url=@currentUrlBase/@Model.MissionIdea.Id&text=@Model.Title">
                                <span class="m-1">Tweet</span>
                                <i class="fa fa-twitter"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="separator"></div>
        <partial name="~/Views/Shared/Partial/_Challenge.cshtml" for="@Model.MissionIdea.MissionIdea.Title" />
    </div>

    <div class="modal fade image-gallery-modal" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <img id="image-gallery-image" class="img-fluid col-md-12 pl-0 pr-0" src="">
                <div class="col-12 text-right modal-close-div pr-0">
                    <a href="/" type="button" class="close modal-close" data-dismiss="modal" aria-label="Close"></a>
                </div>
                <button type="button" class="btn button-left float-left" id="show-previous-image" />

                <button type="button" id="show-next-image" class="btn button-right float-right" />
            </div>
        </div>
    </div>
</div>
