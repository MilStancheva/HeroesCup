@model HeroesCup.Web.Models.Missions.StoryPost
@{
    ViewBag.Title = Model.Title;

    var archive = await WebApp.Api.Pages.GetByIdAsync(Model.BlogId);
    var site = await WebApp.Api.Sites.GetDefaultAsync();
    var siteCulture = site.Culture != null ? site.Culture : "bg-BG";
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo(siteCulture);
    var currentUrlBase = $"{HttpAccess.HttpContext.Request.Scheme}://{HttpAccess.HttpContext.Request.Host}";


    var startDateAsLocalString = Model.Story.Mission.StartDate.ToString("d MMMM yyyy", culture);
    var endDateAsLocalString = Model.Story.Mission.EndDate.ToString("d MMMM yyyy", culture);

    var today = DateTime.Now.Date;
    var expiredMission = false;
    if (today > Model.Story.Mission.EndDate.Date)
    {
        expiredMission = true;
    }

    var missionIsSeveralDays = true;
    if (Model.Story.Mission.EndDate.Date == Model.Story.Mission.StartDate.Date)
    {
        missionIsSeveralDays = false;
    }

    var clubNumber = Model.Story.Mission.Club.OrganizationNumber != null && Model.Story.Mission.Club.OrganizationNumber != string.Empty ? $" {Model.Story.Mission.Club.OrganizationNumber} " : string.Empty;
    var clubName = $"\"{Model.Story.Mission.Club.Name}\", {clubNumber} {Model.Story.Mission.Club.OrganizationType} \"{Model.Story.Mission.Club.OrganizationName}\"";

    var heroImageSrc = "";
    var imageSources = new List<string>();

    if (Model.Story.ImageSources != null && Model.Story.ImageSources.Any())
    {
        imageSources = Model.Story.ImageSources.ToList();
        heroImageSrc = imageSources[0];
    }
    else
    {
        heroImageSrc = Model.Story.Mission.ImageSrc;
    }

    var bytes = Model.Story.Mission.ImageBytes;
}

@section script{
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/bg_BG/sdk.js#xfbml=1&autoLogAppEvents=1&version=v7.0&appId=@Configuration["FacebookAppId"]"></script>
    <script src="~/scripts/share-buttons.js" type="text/javascript"></script>
    <script src="~/scripts/image-gallery.js" type="text/javascript"></script>
}

@section head {
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@currentUrlBase" />
    <meta name="twitter:creator" content="@currentUrlBase" />

    <meta property="og:url" content="@currentUrlBase/story/@Model.Story.Mission.Slug" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:description" content="@Model.Title" />
    <meta property="fb:app_id" content="@Configuration["FacebookAppId"]">
    <meta property="og:image" content="@ImageConverter.ToFormFile(bytes)" />
    <meta property="og:image:width" content="672" />
    <meta property="og:image:height" content="416" />
    <meta property="og:file" content="@ImageConverter.ToFormFile(bytes)" />
}

<div class="main mt-md-5 pt-md-4 mt-5 pt-5">
    <div class="container mt-md-5 pt-md-5 pl-4 pr-4">
        <div class="row mb-md-5 mb-4">
            <div class="row col-12 justify-content-center pr-md-2 pr-0">
                <div class="col-12 pt-md-4 pt-3 pb-md-4 pb-3">
                    <h2 class="heading2 d-none d-md-block d-sm-none d-xs-none">@Model.Title</h2>
                    <h3 class="heading3 d-sm-block d-md-none">@Model.Title</h3>
                    <div class="body2"><span>Клуб @clubName, @Model.Story.Mission.Club.Location </span></div>
                    @if (missionIsSeveralDays)
                    {
                        <div class="body2"><span>Мисията е от @startDateAsLocalString до @endDateAsLocalString</span></div>
                    }
                    else
                    {
                        if (expiredMission)
                        {
                            <div class="body2"><span>Мисията се осъществи на @startDateAsLocalString</span></div>
                        }
                        else
                        {
                            <div class="body2"><span>Мисията e на @startDateAsLocalString</span></div>
                        }

                    }
                </div>

                <div class="col-md-8 col-sm-12 mt-md-5 mt-4 pl-0 pr-0">
                    <div class="col-12 pr-0">
                        <div class="col-sm-12 pl-0 pr-0">
                            <img class="img-fluid center-cropped mission-image" src="@Url.Content(heroImageSrc)">
                        </div>
                    </div>
                    <div class="col-12 justify-content-start pl-0 pr-0 pr-md-5">
                        @if (Model.Story != null && Model.Story.Content != null)
                        {
                            <div class="row col-12 pt-md-5 pt-4 pr-2">
                                <div class="col-12 body2-bold">
                                    <p>Как премина мисията?</p>
                                </div>
                                <div class="col-12 body2">
                                    @Html.Raw(Model.Story.Content)
                                </div>
                            </div>
                            <div class="row pt-md-4 pt-2 mt-md-4 mt-2 pr-md-2 pl-3 pr-3">
                                @foreach (var imageSource in imageSources)
                                {
                                    <div class="col-md-6 col-sm-12 thumb pr-0 mb-3">
                                        <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title=""
                                           data-image="@Url.Content(imageSource)"
                                           data-target="#image-gallery">
                                            <img class="img-fluid img-thumbnail center-cropped story-image"
                                                 src="@Url.Content(imageSource)"
                                                 alt="Another alt text">
                                        </a>
                                    </div>
                                }
                            </div>
                            <div class="col-12 separator ml-2 mr-2 mt-5"></div>
                            <div class="row col-12 pt-md-5 pt-4 mt-4 pr-2">
                                <div class="col-12 body2-bold">
                                    <p>
                                        <a class="body2-bold mission-title" href="/mission/@Model.Story.Mission.Slug">Виж мисията тук</a>
                                    </p>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="col-md-4 col-sm-12 justify-content-start mt-md-5 mt-4 pb-4">
                    <div class="separator d-sm-block d-md-none mb-5"></div>
                    <div class="row share-buttons">
                        <div class="col-12">
                            <span class="text-regular">Супер история? Сподели я.</span>
                        </div>

                        <div class="col-5 body2">
                            <div class="btn btn-share fb-share-button" id="fb-share-button">
                                <span class="m-1">Share</span>
                                <i class="fa fa-facebook-f"></i>
                            </div>
                        </div>

                        <div class="col-5 body2">
                            <a class="btn btn-share" id="twitter-share-button"
                               href="https://twitter.com/intent/tweet?url=@currentUrlBase/story/@Model.Story.Mission.Slug&text=@Model.Title">
                                <span class="m-1">Tweet</span>
                                <i class="fa fa-twitter"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="separator"></div>
        <partial name="~/Views/Shared/Partial/_Challenge.cshtml" for="@Model.Story.Mission.Slug" />
    </div>

    <div class="modal fade image-gallery-modal" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <img id="image-gallery-image" class="img-fluid col-md-12 pl-0 pr-0" src="">
                <div class="col-12 text-right modal-close-div pr-0">
                    <a href="/" type="button" class="close modal-close" data-dismiss="modal" aria-label="Close"></a>
                </div>
                <button type="button" class="btn button-left float-left" id="show-previous-image" />

                <button type="button" id="show-next-image" class="btn button-right float-right" />
            </div>
        </div>
    </div>
</div>
