@model HeroesCup.Web.Models.ClubListItem
@{
    var club = Model;
}

<div class="modal fading" id="@club.Id.ToString()">
    <div class="modal-dialog modal-lg club-modal" role="document">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-4 col-sm-12 club-image pr-0">
                    @if (@club.ClubImageSrc != null)
                    {
                        <img src="@club.ClubImageSrc" class="img-fluid" alt="@club.Name" />
                    }
                    else
                    {
                        <img src="~/images/team_no_image.png" class="img-fluid" alt="@club.Name" />
                    }
                </div>
                <div class="col-md-8 col-sm-12 pl-0">
                    <div class="modal-header no-border pt-5 pr-5 ml-4">
                        <div class="row">
                            <div class="col-2 body1-bold initials">
                                <span data-letters="@club.ClubInitials"></span>
                            </div>
                            <div class="col-9">
                                <h3 class="heading3">
                                    <span>@club.Name</span>,
                                    <span>@club.Location</span>
                                </h3>
                            </div>
                            <div class="col-1">
                                <a href="/" type="button" class="close modal-close" data-dismiss="modal" aria-label="Close"></a>
                            </div>
                        </div>
                    </div>
                    <div class="tabbable">
                        <ul class="nav nav-tabs body2 pr-5 pl-4" role="tablist">
                            <li class="nav-item active">
                                <a class="nav-link active tab-title pl-0 pr-0  ml-3 mr-3" href="#club_information_{@club.Id.ToString()}" data-toggle="tab">
                                    Информация
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link tab-title pl-0 pr-0 ml-3 mr-3" href="#club_missions_{@club.Id.ToString()}" data-toggle="tab">
                                    Мисии
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link tab-title pl-0 pr-0 ml-3 mr-3" href="#club_heroes_{@club.Id.ToString()}" data-toggle="tab">
                                    Герои
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link tab-title pl-0 pr-0 ml-3 mr-3" href="#club_coordinators_{@club.Id.ToString()}" data-toggle="tab">
                                    За координатори
                                </a>
                            </li>
                        </ul>

                        @* Club Information *@
                        <div class="tab-content no-border pr-5 pl-4">
                            <div role="tabpanel" class="tab-pane active p-3" id="club_information_{@club.Id.ToString()}">
                                <div class="row club body2 mt-3">
                                    <div class="col-12">
                                        @club.Club.Description
                                    </div>
                                    <div class="row col-12 mt-3">
                                        <div class="row col-md-6 col-sm-12">
                                            <div class="col-md-5 col-sm-6">
                                                <span>@club.Points точки</span>
                                            </div>
                                            <div class="col-md-1 col-sm-1 text-center">
                                                <span class="points-heroes-separator"></span>
                                            </div>
                                            <div class="col-md-5 col-sm-5">
                                                <span>@club.HeroesCount герои</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="separator mt-3"></div>
                                    <div class="row col-sm-6 vertical-center pt-3">
                                        <div class="col-12">
                                            <p class="body2">Координатор:</p>
                                        </div>
                                        <div class="col-md-3 col-sm-3">
                                            <span data-letters="@club.Coordinator.HeroInitials"></span>
                                        </div>
                                        <div class="col-md-9 col-sm-9 body2">@club.Coordinator.Name</div>
                                    </div>
                                </div>
                            </div>

                            @* Club Missions *@
                            <div role="tabpanel" class="tab-pane p-3" id="club_missions_{@club.Id.ToString()}">
                                <div class="club row mt-3">
                                    @foreach (var mission in club.Missions)
                                    {
                                        <div class="col-sm-12 col-md-6">
                                            <div class="mission-body ">
                                                <a href="/missions/@mission.Id" target="_blank">
                                                    <img class="img-fluid" src="@mission.ImageSrc" width="320" height="198" />
                                                    <h4 class="mission-title body2-bold">@mission.Title</h4>
                                                    <p class="body3">от @mission.Club.Name</p>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @* Club Heroes *@
                            <div role="tabpanel" class="tab-pane p-3" id="club_heroes_{@club.Id.ToString()}">
                                <div class="club row mt-3">
                                    @foreach (var hero in club.Heroes)
                                    {
                                        <div class="row col-sm-6 p-1 vertical-center">
                                            <div class="col-md-3 col-sm-3 body1-bold">
                                                <span data-letters="@hero.HeroInitials"></span>
                                            </div>
                                            <div class="col-md-8 col-sm-8 body2"><span>@hero.Name</span></div>
                                        </div>
                                    }

                                </div>
                            </div>

                            <div role="tabpanel" class="tab-pane p-3" id="club_coordinators_{@club.Id.ToString()}">
                                <div class="club row mt-3 body2">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris in egestas mi, eget ultricies ligula. Praesent eu blandit odio, eget vehicula sem.</p>
                                    <p>
                                        <a class="btn btn-heroes text-white">admin.timeheroes.bg</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>