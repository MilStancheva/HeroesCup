@{
    var mainBodyClass = GetMainBodyClass();

    string GetMainBodyClass()
    {
        if (ViewBag.Title == "Home")
        {
            return "home-background";
        }

        if (ViewBag.Title == "Resources")
        {
            return "resources-background";
        }

        if (ViewBag.Title == "Events")
        {
            return "events-background";
        }

        return string.Empty;
    }
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://kit.fontawesome.com/e8be9fcdae.js" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/e8be9fcdae.js" crossorigin="anonymous"></script>

    <title>@ViewBag.Title</title>

    @if (Model is Piranha.Models.IMeta)
    {
        <partial name="Partial/_Meta.cshtml" />
    }

    @RenderSection("head", required: false)
</head>
<body class="@mainBodyClass">
    <header class="site-header @(ViewBag.HasImage == null || !ViewBag.HasImage ? "site-header-dark" : "")">
        @if (ViewBag.Title != "Landing")
        {
            <div class="container">

                <div class="row">
                    <div class="col-md-10 col-sm-12">
                        <partial name="Partial/_Menu.cshtml" />
                    </div>
                    <form class="form-inline my-2 my-lg-0 col-md-2 col-sm-12 justify-content-center">
                        <button class="btn btn-heroes btn-lg my-2 my-sm-0" type="button" data-toggle="modal" data-target="#exampleModal">Участвай</button>
                    </form>
                </div>
            </div>
        }
    </header>
    <!-- Modal -->
    <div class="modal fade justify-content-center" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content p-4">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Направете геройски клуб и спечелете купата!</h2>
                    <a href="/" type="button" class="close modal-close" data-dismiss="modal" aria-label="Close"></a>
                </div>
                <div class="modal-body">
                    <p>Изпрати e-mail на timeheroes@timeheroes.org</p>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-heroes mr-auto" href="https://timeheroes.org/bg/" target="_blank">Продължи в Timeheroes</a>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <partial name="Partial/_Footer.cshtml" />

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @RenderSection("script", required: false)
</body>
</html>